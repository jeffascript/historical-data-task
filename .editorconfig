# Top-most EditorConfig file
root = true

# All files
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# JavaScript files
[*.js]
max_line_length = 100

# TypeScript files
[*.ts]
max_line_length = 100

# JSON files
[*.json]
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false
